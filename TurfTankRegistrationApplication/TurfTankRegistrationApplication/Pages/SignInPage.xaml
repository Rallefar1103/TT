<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurfTankRegistrationApplication.Pages.SignInPage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">
             
    <ContentPage.Content>
        <StackLayout>
            <BoxView HeightRequest="80"
                     VerticalOptions="Start"
                     BackgroundColor="Black"/>
            <Image Source="turf_tank_transparent.png"
                       WidthRequest="300"
                       HeightRequest="300"
                       VerticalOptions="Start"
                       Margin="15"/>
            <Button Text=" Sign In"
                       FontAttributes="Bold"
                       FontSize="20"
                       Command=" {Binding NavigateToMenuPage}"
                       BackgroundColor="White"
                       BorderColor="Green"
                       BorderWidth="2"
                       Margin="10"
                       CornerRadius="30"
                       HeightRequest="50"
                       WidthRequest="275"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
